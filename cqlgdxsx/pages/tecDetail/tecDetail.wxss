.wapper{
  padding: 0 20rpx;
}
.tecInfo{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tecInfo image{
  width: 100%;
}

.techname{
  font-weight: bold;
  padding: 20rpx 0;
}
.techexplain{
  color: #999;
}


.proItem{
  display: flex;
  justify-content: left;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #999;
  margin-top: 20rpx;
}

.tecBtn{
  margin-left: 40rpx;
  background-color: orange;
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  border-radius: 50%;
}